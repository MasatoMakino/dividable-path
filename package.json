{
  "name": "particle-waypoint",
  "version": "0.1.0",
  "description": "Path module for calculating waypoints.",
  "main": "index.js",
  "repository": "https://MasatoMakino@github.com/MasatoMakino/particle-waypoint.git",
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/three": "^0.93.27",
    "@types/easeljs": "^1.0.0",
    "browser-sync": "^2.26.3",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "replace-in-file": "^3.4.4",
    "rollup": "^1.6.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.4000"
  },
  "scripts": {
    "build": "npm run prettier:src && tsc && npm run rollup",
    "prettier:src": "prettier --write './!(bin|docs)/**/*.{js,ts,json}' ",
    "rollup": "rollup --config",
    "watch": "npm run watch:tsc | npm run watch:rollup  | npm run watch:server ",
    "watch:tsc": "tsc -w",
    "watch:rollup": "rollup --config -w",
    "watch:server": "node task/browsersync.js development",
    "server": "node task/browsersync.js production",
    "doc": "npm run doc:generate && npm run doc:replaceNode && npm run doc:card",
    "doc:generate": "typedoc --tsconfig tsdocconfig.json src",
    "doc:replaceNode": "node ./task/replaceAPI.js",
    "doc:card": "repoimg -n MasatoMakino/particle-waypoint -o ./docs/card.png"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  }
}
